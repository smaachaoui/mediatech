<div class="bg-white border rounded-3 p-3 position-sticky" style="top: 1rem;">
  <div class="d-flex align-items-center gap-3 mb-3">

    <div class="mt-avatar mt-avatar--lg">
      {% set avatar = app.user.profilePicture ?? null %}
      {% if avatar %}
        <img src="{{ asset(avatar) }}" alt="Photo de profil" class="mt-avatar__img">
      {% else %}
        <div class="mt-avatar__fallback">
          {{ app.user.pseudo|slice(0, 1)|upper }}
        </div>
      {% endif %}
    </div>

    <div>
      <div class="fw-semibold">{{ app.user.pseudo }}</div>
      <div class="text-muted small">{{ app.user.email }}</div>
    </div>

  </div>

  {% block dashboard_sidebar_nav %}{% endblock %}
</div>
