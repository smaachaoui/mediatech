{# templates/partials/_loader.html.twig #}
{#
  Loader global qui s'affiche pendant les transitions et actions.
  Il est active via JavaScript sur les formulaires et liens avec data-loader="true".
#}

<div id="global-loader" class="loader-overlay" style="display: none;">
  <div class="loader-content">
    <div class="loader-spinner">
      <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
        <span class="visually-hidden">Chargement...</span>
      </div>
    </div>
    <div class="loader-text mt-3 text-muted">Chargement en cours...</div>
  </div>
</div>

<style>
  .loader-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.9);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
  }

  .loader-overlay.show {
    opacity: 1;
  }

  .loader-content {
    text-align: center;
  }

  .loader-spinner {
    display: inline-block;
  }

  .loader-text {
    font-size: 0.95rem;
    font-weight: 500;
  }

  /* Animation du spinner personnalisee */
  @keyframes loader-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .loader-overlay.show .loader-spinner {
    animation: loader-pulse 1.5s ease-in-out infinite;
  }
</style>