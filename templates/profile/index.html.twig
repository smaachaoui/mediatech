{% extends 'dashboard/_layout.html.twig' %}

{% block title %}Mon profil | MediaTech{% endblock %}

{% block dashboard_sidebar %}
    {% include 'profile/partials/_sidebar.html.twig' with { section: section } %}
{% endblock %}

{% block dashboard_content %}
    {% if section == 'info' %}
        {% include 'profile/partials/_personal_info.html.twig' %}
    {% elseif section == 'collections' %}
        {% include 'profile/partials/_collections.html.twig' %}
    {% elseif section == 'comments' %}
        {% include 'profile/partials/_comments.html.twig' %}
    {% elseif section == 'support' %}
        {% include 'profile/partials/_support.html.twig' %}
    {% endif %}
{% endblock %}
