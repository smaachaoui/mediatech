{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} | MediaTech{% endblock %}

{% block body %}
<div class="bg-white border rounded-3 p-3">

  <div class="row g-4">
    <div class="col-12 col-md-4 col-lg-3">
      {% if book.thumbnail %}
        <img src="{{ book.thumbnail }}" class="img-fluid rounded-3 border" alt="{{ book.title }}">
      {% else %}
        <div class="d-flex align-items-center justify-content-center bg-light border rounded-3" style="height: 320px;">
          <span class="text-muted">Aucune couverture</span>
        </div>
      {% endif %}
    </div>

    <div class="col-12 col-md-8 col-lg-9">
      <h1 class="h4 mb-2">{{ book.title }}</h1>

      <div class="text-muted mb-3">
        {% if book.authors is not empty %}
          {{ book.authors|join(', ') }}
        {% else %}
          Auteur : —
        {% endif %}
        {% if book.publishedDate %}
          • {{ book.publishedDate|slice(0,4) }}
        {% endif %}
        {% if book.publisher %}
          • {{ book.publisher }}
        {% endif %}
      </div>

      <div class="d-flex gap-2 mb-3">
        <form method="post" action="{{ path('app_media_add_to_default', { kind: 'book', id: book.id }) }}">
            <input type="hidden" name="_token" value="{{ csrf_token('add_media_book_' ~ book.id) }}">
            <button class="btn btn-primary" type="submit">Ajouter à ma collection</button>
        </form>

        <a class="btn btn-outline-secondary" href="{{ path('app_catalog', { q: book.title, type: 'books' }) }}">Retour catalogue</a>
      </div>

      <h2 class="h6">Description</h2>
      <div class="text-muted">
        {{ book.description ? book.description|raw : 'Aucune description.' }}
      </div>

      <div class="mt-3 small text-muted">
        {% if book.pageCount %}Pages : {{ book.pageCount }}{% endif %}
        {% if book.isbn %} • ISBN : {{ book.isbn }}{% endif %}
      </div>
    </div>
  </div>

</div>
{% endblock %}
