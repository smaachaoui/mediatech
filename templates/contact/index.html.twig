{% extends 'base.html.twig' %}

{% block title %}Contact | MediaTech{% endblock %}

{% block body %}
<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">

            <div class="text-center mb-4">
                <h1 class="h3 mb-2">Contact</h1>
                <p class="text-muted mb-0">
                    Une question, une suggestion ? N’hésite pas à nous écrire.
                </p>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4 p-md-5">

                    {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

                        {# Erreurs globales du form (si tu en as) #}
                        {% if form_errors(form) %}
                            <div class="alert alert-danger">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                {{ form_row(form.name, {
                                    label: 'Nom',
                                    attr: { class: 'form-control', autocomplete: 'name', placeholder: 'Ton nom' }
                                }) }}
                            </div>

                            <div class="col-12 col-md-6">
                                {{ form_row(form.email, {
                                    label: 'Email',
                                    attr: { class: 'form-control', autocomplete: 'email', placeholder: 'exemple@mail.com' }
                                }) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.subject, {
                                    label: 'Sujet',
                                    attr: { class: 'form-control', placeholder: 'Objet de ton message' }
                                }) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.message, {
                                    label: 'Message',
                                    attr: { class: 'form-control', rows: 6, placeholder: 'Explique-nous en détail…' }
                                }) }}
                            </div>
                        </div>

                        <div class="d-flex flex-column flex-sm-row justify-content-end gap-2 mt-4">
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                                Retour accueil
                            </a>
                            <button class="btn btn-primary" type="submit">
                                Envoyer
                            </button>
                        </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
