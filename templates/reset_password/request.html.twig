{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4 p-md-5">

                    <h1 class="h3 mb-1 text-center">Mot de passe oublié</h1>
                    <p class="text-muted text-center mb-4">
                        Entre ton email pour recevoir un lien de réinitialisation.
                    </p>

                    {# Flash errors #}
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">
                            {{ flash_error }}
                        </div>
                    {% endfor %}

                    {{ form_start(requestForm, { attr: { novalidate: 'novalidate' } }) }}

                        <div class="mb-3">
                            {{ form_row(requestForm.email, {
                                label: 'Email',
                                attr: {
                                    class: 'form-control',
                                    autocomplete: 'email',
                                    placeholder: 'exemple@mail.com'
                                }
                            }) }}
                        </div>

                        <div class="small text-muted mb-3">
                            Nous t’enverrons un email contenant un lien pour choisir un nouveau mot de passe.
                        </div>

                        <button class="btn btn-primary w-100" type="submit">
                            Envoyer l’email de réinitialisation
                        </button>

                        <div class="text-center mt-3">
                            <a href="{{ path('app_login') }}">Retour à la connexion</a>
                        </div>

                    {{ form_end(requestForm) }}

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
